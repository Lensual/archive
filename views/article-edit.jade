doctype html
html
    include head
    body
        include header
        form(action="", method="post", id="post_article")
            p title:
                input(type="text", name="title", value!=meta.art.title)
            p content:
                textarea(name="content", form="post_article",cols="30", rows="10")!= meta.art.content
            input(type="submit", value="submit")

        form(action="?upload=true", method="post", enctype="multipart/form-data")
            p or upload:
                input(type="file", name="file")
            input(type="submit", value="submit")
            
        include footer